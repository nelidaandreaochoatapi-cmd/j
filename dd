<script>
function mostrar(seccion) {
  document.querySelectorAll('.acciones, .seccion')
    .forEach(div => div.style.display = 'none');
  document.getElementById(seccion).style.display = 'block';
}

// Mostrar pantalla de inicio al cargar
mostrar('inicio');

// Manejo de envío de la solicitud de tarjeta
document.getElementById('form-solicitar').addEventListener('submit', function(e){
  e.preventDefault();
  document.getElementById('form-solicitar').style.display = 'none';
  document.getElementById('msg-solicitar').textContent =
    'Gracias. Te enviaremos un correo para crear tu tarjeta.';
});

// Manejo de envío de la denuncia
document.getElementById('form-denuncia').addEventListener('submit', function(e){
  e.preventDefault();
  document.getElementById('form-denuncia').style.display = 'none';
  document.getElementById('msg-denuncia').textContent =
    'Gracias. OSITRAN te enviará un correo para que puedas hacer el seguimiento a tu denuncia.';
});
</script>
